{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=InternalTrainingSystemDB;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "JwtSettings": {
    "SecretKey": "default-secret-key-will-be-overridden-by-env",
    "Issuer": "InternalTrainingSystem",
    "Audience": "InternalTrainingSystem-Users",
    "ExpireHours": 24
  },
  "ExternalApiKeys": {
    "GoogleApiKey": "",
    "MicrosoftApiKey": "",
    "SendGridApiKey": "",
    "AzureStorageConnectionString": ""
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromEmail": "",
    "FromName": "Internal Training System"
  },
  "FileUploadSettings": {
    "MaxFileSizeMB": 10,
    "AllowedFileExtensions": [".pdf", ".doc", ".docx", ".ppt", ".pptx", ".jpg", ".png", ".gif"]
  },
  "ApplicationSettings": {
    "ApiBaseUrl": "https://localhost:7001",
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:3001"]
  }
}
