# Environment Configuration Template
# Copy this file to .env and fill in the actual values
# DO NOT put real values in this file as it will be committed to git

# Database Configuration
CONNECTION_STRING=Server=localhost;Database=InternalTrainingSystemDB;Trusted_Connection=true;TrustServerCertificate=true;
# Or for SQL Server Authentication:
# CONNECTION_STRING=Server=localhost;Database=InternalTrainingSystemDB;User Id=your_username;Password=your_password;TrustServerCertificate=true;

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters-long
JWT_ISSUER=InternalTrainingSystem
JWT_AUDIENCE=InternalTrainingSystem-Users
JWT_EXPIRE_HOURS=24

# External API Keys
GOOGLE_API_KEY=your-google-api-key-here
MICROSOFT_API_KEY=your-microsoft-api-key-here
SENDGRID_API_KEY=your-sendgrid-api-key-here
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string

# Application Settings
ENVIRONMENT=Development
API_BASE_URL=https://localhost:7001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Internal Training System

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.pdf,.doc,.docx,.ppt,.pptx,.jpg,.png,.gif

# Logging
LOG_LEVEL=Information